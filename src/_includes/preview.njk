
{% set categories %}
{% if post.categories.length %}
    <ul class="list-horizontal">
      {% for id in post.categories %}
        {% for category in categories %}
          {% if category.id == id %}
            <li><a href="{{ '/category/' + category.slug | absoluteUrl }}">{{ category.name }}</a></li>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </ul>
  {% endif %}
{% endset %}

{% set tags %}
  {% if post.tags.length %}
    <ul class="list-horizontal">
      {% for id in post.tags %}
        {% for tag in tags %}
          {% if tag.id == id %}
            <li><a class="text-small" href="{{ '/tag/' + tag.slug | absoluteUrl }}">#{{ tag.name }}</a></li>
          {% endif %}
        {% endfor %}
      {% endfor %}
    </ul>
  {% endif %}
{% endset %}

<style data-helmet>
  {% include 'styles/preview.css' %}
</style>

<article class="preview">
  <div class="meta">
    <span>
      <span class="date">{{ post.date | dateStringFormatted }}</span>
      {% if post.date != post.modified %}<small class="muted">, zuletzt ge√§ndert am {{ post.modified | dateStringFormatted }}</small>{% endif %}
    </span>
    {% if post.categories.length %}{{ categories | safe }}{% endif %}
  </div>
  <h2>{{ post.title.rendered }}</h2>

  {{ post.excerpt.rendered | safe }}

  {% if post.tags.length %}{{ tags | safe }}{% endif %}
</article>