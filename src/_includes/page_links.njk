<style data-helmet="page-links">
  {% include 'styles/page_links.css' %}
</style>

{% if pagination.pages.length > 1 %}
  <nav data-pagination-links aria-label="Seitennavigation">
    <ul class="list-horizontal">
      <li>
        {% if pagination.href.previous %}
          <a href="{{ pagination.href.previous }}">&larr;</a>
        {% else %}
          <span>&larr;</span>
        {% endif %}
      </li>
      {% for _page in pagination.pages %}
        <li>
          <a
            href="{{ pagination.hrefs[loop.index0] | absoluteUrl }}"
            title="{{ title }}-Seite {{ loop.index }}"
            {% if loop.index0 == pagination.pageNumber %} aria-current="page"{% endif %}
          >
            {{ loop.index }}
          </a>
        </li>
      {% endfor %}
      <li>
        {% if pagination.href.next %}
          <a href="{{ pagination.href.next }}">&rarr;</a>
        {% else %}
          <span>&rarr;</span>
        {% endif %}
      </li>
    </ul>
  </nav>
{% endif %}